@model List<Product>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create new product
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Author
        </th>
        <th>
            Title
        </th>
        <th>
            ISBN
        </th>
        <th>
            List Price
        </th>
        <th>
            Price
        </th>
        <th>
            Price (over 50 pcs.)
        </th>
        <th>
            Price (over 100 pcs.)
        </th>
        <th>
            Category
        </th>
        <th>
            Options
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Author</td>
            <td>@product.Title</td>
            <td>@product.ISBN</td>
            <td>@product.ListPrice</td>
            <td>@product.Price</td>
            <td>@product.Price50</td>
            <td>@product.Price100</td>
            <td>cat</td>
            <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-fill"></i> Edit
                    </a>

                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
            </td>
        </tr>
    }

    </tbody>
</table>