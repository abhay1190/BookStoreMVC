@model IEnumerable<UserProductShoppingCart>

<h1 class="mt-3">Cart</h1>
<hr />

<div class="container mt-5">
    <div class="row">
        <div class="col-10">
            @foreach (var item in Model)
            {
                <div class="border-bottom row p-2">
                    <div class="col-1"><img src="@item.Product.ImageUrl" alt="@item.Product.Title" style="max-height:100px" /></div>
                    <div class="col-9 ps-4">
                        <div>
                            <a class="text-decoration-none text-black fw-bold" asp-controller="Home" asp-action="Details" asp-route-id="@item.Product.Id">@item.Product.Author - @item.Product.Title</a>

                            <div class="form-inline d-flex align-items-center mt-3">
                                <input class="form-control w-auto cart-item-quantity-input" data-id="@item.Product.Id" type="number" value="@item.quantity" min="1" max="1000" />
                                <span class="align-self-center ms-2">pcs.</span>
                            </div>
                            <button class="btn btn-link text-danger p-0 mt-2 cart-item-remove-btn" data-id="@item.Product.Id"><i class="bi bi-trash3-fill me-1"></i>Remove</button>
                        </div>
                    </div>
                    <div class="col-2 d-flex align-items-center flex-column justify-content-center ">
                        <div>
                            <div>@item.TotalPrice.ToString("c")</div>
                            <div class="text-muted small">@item.Product.ListPrice.ToString("c") * @item.quantity</div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-2 p-4">
            <h2>Summary</h2>
            <hr />
            <div class="d-flex flex-columns justify-content-between">
                <span>Subtotal:</span><span>324 zł</span>
            </div>
            <div class="d-flex flex-columns justify-content-between">
                <span>VAT:</span><span>432 zł</span>
            </div>
            <div class="d-flex flex-columns justify-content-between">
                <span>Shipping:</span><span>12 zł</span>
            </div>
            <div class="d-flex flex-columns justify-content-between">
                <span class="fw-bold">Total:</span><span>542 zł</span>
            </div>
        </div>


    </div>
</div>