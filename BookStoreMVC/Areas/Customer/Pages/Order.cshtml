@page "{id:int}"
@model BookStoreMVC.Areas.Customer.Pages.OrderModel
@{
    Layout = "_Layout";
}

<h1>Order details</h1>
<hr />

<span>Order id: <strong>@Model.order.OrderId</strong></span>

<h3 class="mt-3">Shipping details:</h3>
<div>
    <span>Street address: <strong>@Model.order.StreetAddress</strong></span><br />
    <span>City: <strong>@Model.order.City</strong></span><br />
    <span>State: <strong>@Model.order.State</strong></span><br />
    <span>Postal code: <strong>@Model.order.PostalCode</strong></span><br />
    <span>Phone number: <strong>@Model.order.PhoneNumber</strong></span>
</div>

<h3 class="mt-3">Your order:</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.order.Items)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Product.Author - @item.Product.Title</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <h3>Summary:</h3>
    <div class="d-flex flex-columns justify-content-between">
        <span>Subtotal:</span><span id="subtotal">@Model.order.Subtotal.ToString("c")</span>
    </div>
    <div class="d-flex flex-columns justify-content-between">
        <span>VAT (@(BookStoreMVC.Utility.Constants.Prices.Vat * 100)%):</span><span id="vat">@Model.order.Vat.ToString("c")</span>
    </div>
    <div class="d-flex flex-columns justify-content-between">
        <span>Shipping:</span><span id="shipping">@Model.order.Shipping.ToString("c")</span>
    </div>
    <div class="d-flex flex-columns justify-content-between">
        <span class="fw-bold">Total:</span><span id="total">@Model.order.Total.ToString("c")</span>
    </div>
</div>